{% extends 'base.html.twig' %}

{% block title %}Hello ChallengeController!{% endblock %}

{% block content %}
    <div class="card">
        <div class="header">
            <h1>Classement des utilisateurs </h1>
        </div>
        <div class="body">
            <div class="tab-content">
                {% for user in listUser %}
                    <div class="row">
                        <a href="{{ path('user_id', {'id':user.id}) }}" class="list-group-item">
                            <div class="col-md-4">
                                <h4 class="list-group-item-heading">{{ user.firstName }} "{{ user.username }}" {{ user.lastName }}</h4>
                            </div>
                            <div class="col-md-4">
                                <p class="list-group-item-text">
                                    Score : {{ user.score }}
                                </p>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
